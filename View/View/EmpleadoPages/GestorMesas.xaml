<Page x:Class="View.EmpleadoPages.GestorMesas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:View.EmpleadoPages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GestorMesas">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="groupBoxContainer" Orientation="Vertical">
                <GroupBox Header="Terraza" FontSize="15px" FontFamily="Mangal">
                    <WrapPanel Name="wrap_TERRAZA">
                    </WrapPanel>
                </GroupBox>
                <GroupBox Header="Planta 0" FontSize="15px" FontFamily="Mangal">
                    <WrapPanel  Name="wrap_P0">
                    </WrapPanel>
                </GroupBox>

                <GroupBox Header="Planta 1" FontSize="15px" FontFamily="Mangal">
                    <WrapPanel  Name="wrap_P1">
                    </WrapPanel>
                </GroupBox>

                <GroupBox Header="Planta 2" FontSize="15px" FontFamily="Mangal">
                    <WrapPanel  Name="wrap_P2">
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>